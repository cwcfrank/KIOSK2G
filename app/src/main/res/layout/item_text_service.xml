<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/customerCenterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="170px"
        android:visibility="gone"
        android:orientation="horizontal">
<!--
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </RelativeLayout>
-->
        <ImageView
            android:id="@+id/text_service_customer_center"
            android:layout_width="114px"
            android:layout_height="126px"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            android:src="@drawable/text_service_customer_center"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginLeft="50px"
            android:background="@drawable/text_service_left">
            <TextView
                android:id="@+id/customerCenterTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#6C6B6A"
                android:textSize="50sp"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px"
                android:layout_marginLeft="100px"
                android:text="123456789 123456789 123456789 123456789 123456789 "/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/customerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170px"
        android:visibility="gone"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_marginRight="50px"
            android:background="@drawable/text_service_right">
            <TextView
                android:id="@+id/customerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="#6C6B6A"
                android:textSize="50sp"
                android:layout_marginTop="0px"
                android:layout_marginRight="100px"
                android:layout_marginBottom="00px"
                android:text="123456789"/>
        </RelativeLayout>
<!--
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </RelativeLayout>
-->
        <ImageView
            android:id="@+id/text_service_customer"
            android:layout_width="102px"
            android:layout_height="99px"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            android:src="@drawable/text_service_customer"/>
    </LinearLayout>

</RelativeLayout>
